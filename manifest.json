{
  "manifest_version": 3,
  "name": "EventMate",
  "version": "1.0.0",
  "description": "Automatically read Luma website cookies and implement pagination data scraping functionality",
  "permissions": ["cookies", "activeTab", "storage"],
  "host_permissions": ["*://*.luma.ai/*", "*://*.lu.ma/*", "*://*.luma.com/*"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.luma.ai/*", "*://*.lu.ma/*", "*://*.luma.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EventMate"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/*"],
      "matches": ["*://*.luma.ai/*", "*://*.lu.ma/*", "*://*.luma.com/*"]
    }
  ]
}
